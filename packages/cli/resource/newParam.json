[
    {
        "data": {
            "type": "text",
            "name": "app-name",
            "title": "App Name",
            "validation": {
                "pattern": "^[\\da-zA-Z]+$"
            },
            "default": "myapp"
        }
    },
    {
        "data": {
            "type": "singleSelect",
            "name": "solution",
            "title": "Select a solution",
            "option": [
                "fx-solution-azure"
            ],
            "default": "fx-solution-azure"
        }
    },
    {
        "data": {
            "type": "folder",
            "name": "folder",
            "title": "Select root folder of the project",
            "validation": {
                "namespace": "",
                "method": "validateFolder"
            },
            "default": "./"
        }
    },
    {
        "data": {
            "name": "capabilities",
            "title": "Add capabilities",
            "prompt": "Choose the capabilities for your project setup",
            "type": "multiSelect",
            "option": [
                {
                    "id": "Tab",
                    "label": "Tab",
                    "description": "Embeds a web-based app experience in a tab in a Teams chat, channel, or personal workspace."
                },
                {
                    "id": "Bot",
                    "label": "Bot",
                    "description": "Bots allow you to interact with and obtain information from a software or website in a text/search/conversational manner."
                }
            ],
            "default": [
                "Tab"
            ]
        }
    },
    {
        "data": {
            "name": "tab-scopes",
            "title": "Tab scopes",
            "type": "singleSelect",
            "option": [
                "personal"
            ],
            "default": "personal"
        }
    },
    {
        "data": {
            "name": "host-type",
            "title": "Select front-end hosting type",
            "type": "singleSelect",
            "option": [
                {
                    "id": "Azure",
                    "label": "Azure",
                    "description": "Azure Cloud"
                },
                {
                    "id": "SPFx",
                    "label": "SPFx",
                    "description": "SharePoint Framework"
                }
            ],
            "default": "Azure"
        }
    },
    {
        "data": {
            "name": "azure-resources",
            "title": "Additional cloud resources",
            "type": "multiSelect",
            "option": [
                {
                    "id": "sql",
                    "label": "sql",
                    "description": "Azure SQL Database"
                },
                {
                    "id": "function",
                    "label": "function",
                    "description": "New APIs from Azure Functions"
                }
            ],
            "default": []
        },
        "condition": {
            "equals": "Azure"
        }
    },
    {
        "data": {
            "name": "function-language",
            "description": "Please choose a programming language for the Azure function app.",
            "type": "singleSelect",
            "default": "JavaScript",
            "option": [
                "JavaScript",
                "TypeScript"
            ]
        }
    },
    {
        "data": {
            "name": "function-name",
            "description": "Please provide function name.",
            "type": "text",
            "default": "myFunc",
            "validation": {
                "namespace": "fx-solution-azure/fx-resource-function",
                "method": "validateFunctionName"
            }
        }
    },
    {
        "data": {
            "type": "singleSelect",
            "name": "spfx-framework-type",
            "title": "Which framework would you like to use?",
            "option": [
                "none",
                "react"
            ],
            "default": "none"
        }
    },
    {
        "data": {
            "type": "text",
            "name": "spfx-webpart-name",
            "title": "Webpart Name",
            "default": "helloworld",
            "validation": {
                "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
            }
        }
    },
    {
        "data": {
            "type": "text",
            "name": "spfx-webpart-desp",
            "title": "Webpart Description",
            "default": "helloworld description",
            "validation": {
                "required": true
            }
        }
    },
    {
        "data": {
            "name": "programming-language",
            "type": "singleSelect",
            "option": [
                {
                    "id": "javascript",
                    "label": "javascript"
                },
                {
                    "id": "typescript",
                    "label": "typescript"
                }
            ],
            "title": "Select language for bot project",
            "default": "typescript"
        }
    },
    {
        "data": {
            "name": "way-to-register-bot",
            "type": "singleSelect",
            "option": [
                {
                    "id": "create-new",
                    "label": "Create a new bot registration"
                },
                {
                    "id": "reuse-existing",
                    "label": "Reuse an existing bot registration"
                }
            ],
            "title": "Select way to get bot registration",
            "default": "create-new"
        }
    },
    {
        "data": {
            "name": "bot-id",
            "type": "text",
            "title": "Please enter bot id",
            "default": "",
            "validation": {}
        }
    },
    {
        "data": {
            "name": "bot-password",
            "type": "password",
            "title": "Please enter bot password",
            "default": "",
            "validation": {}
        }
    }
]
